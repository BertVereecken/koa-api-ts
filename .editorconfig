# Basic editor configuration through EditorConfig.
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# Markdown files override
[*.md]
max_line_length = off
trim_trailing_whitespace = false
