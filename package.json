{
  "name": "express-api",
  "version": "1.0.0",
  "description": "API based on the Express framework",
  "main": "dist/index.js",
  "author": "Bert Vereecken",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && node dist/src/index.js",
    "watch": "tsc -w",
    "dev": "nodemon --config nodemon.json",
    "build:ts": "tsc -p tsconfig.json",
    "build": "npm run build:ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/node": "^14.14.10",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "apollo-server-koa": "^2.19.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-helmet": "^5.2.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29",
    "winston": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
